<application>

    <property name="num_copies" value="4" />

    <stream id="data-${copy.id}" class="streams.cta.io.LoopStream" copies="${num_copies}" limit="16000">

        <stream id="cta:data" class="streams.cta.io.ImageStream" url="file:src/main/resources/images.json.gz" />

    </stream>

    <service id="regressor" class="streams.cta.PredictionService" url="file:src/test/resources/test_regressor.pmml" />
    <service id="classifier" class="streams.cta.PredictionService" url="file:src/test/resources/test_classifier.pmml" />


    <process input="data-${copy.id}" copies="${num_copies}" >
        <streams.cta.SplitByTelescope key="@telescopes" />
        <ForEach key="@telescopes">
            <streams.cta.cleaning.TailCut />
            <streams.cta.features.Moments />
            <streams.cta.TelescopePredictions regressor="regressor" classifier="classifier" local="true"/>
        </ForEach>
        <streams.cta.MergeByTelescope key="@telescopes"/>
        <streams.cta.SummarizePredictions />
        <RemoveKeys keys="@datarate,@*memory,*telescope*" />
        <streams.DataRate every="4000" logmemory="true"/>

        <If condition="%{data.@datarate} != null}" >
            <Enqueue queue="perf"/>
        </If>

    </process>

    <process input="perf">
        <streams.cta.io.CSVWriter url="file:./performance_threads_${num_copies}.csv" keys="@datarate,@stream,@totalmemory,@freememory"/>
    </process>

</application>
