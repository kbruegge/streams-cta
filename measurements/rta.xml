<application>

    <property name="prefix" value="gamma*.json.gz" />
    <property name="outfile" value="gammas_rta.csv" />

    <stream id="cta:data"
            class="streams.cta.io.RecursiveDirectoryStream"
            url="file:/Users/kbruegge/cta_data/raw/"
            pattern="${prefix}" >

        <stream id="images" class="streams.cta.io.ImageStream"/>

    </stream>

    <service id="regressor" class="streams.cta.PredictionService" url="file:src/test/resources/test_regressor.pmml" />
    <service id="classifier" class="streams.cta.PredictionService" url="file:src/test/resources/test_classifier.pmml" />


    <process input="cta:data" copies="2" >
        <streams.cta.SplitByTelescope key="@telescopes" />
        <ForEach key="@telescopes">
            <streams.cta.cleaning.TailCut />
            <streams.cta.features.Moments />
            <streams.cta.TelescopePredictions regressor="regressor" classifier="classifier" local="true"/>
        </ForEach>
        <streams.cta.MergeByTelescope key="@telescopes"/>
        <streams.cta.SummarizePredictions />
        <streams.cta.stereo.Stereo />

        <RemoveKeys keys="@datarate,@*memory,*telescope:*,array:triggered_telescopes" />

        <Enqueue queue="perf"/>

    </process>

    <process input="perf">
        <streams.DataRate every="500"/>
        <streams.cta.io.CSVWriter url="file:${outfile}" keys="stereo:estimated_direction:*,
                                                                     stereo:estimated_impact_position:*,
                                                                     prediction:*,
                                                                     array:num_*,
                                                                     mc:*"/>
    </process>

</application>
