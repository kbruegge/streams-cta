<application>

    <property name="address" value="tcp://localhost:12810" />

    <stream id="cta:data_${copy.id}" class="streams.cta.io.CameraServerStream" addresses="${address}" copies="4"/>

    <property name="port" value="12811" />

    <Queue id="monitor"/>

    <process input="cta:data_${copy.id}" copies="4">
        <streams.DataRate every="100" />
        <Enqueue queues="performance" condition="%{data.@datarate} != null"/>

    </process>

    <process input="monitor" >
        <streams.cta.io.CameraServerPublisher addresses="tcp://*:${port}" monitorAddress="tcp://"/>
    </process>



</application>