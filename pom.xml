            <dependencies>
                <dependency>
                    <groupId>de.sfb876</groupId>
                    <artifactId>streams-spark</artifactId>
                    <version>${streams.cta.version}-SNAPSHOT</version>
                </dependency>
            </dependencies>

            <properties>
                <mainclass>deploy_on_spark</mainclass>
                <platform>spark</platform>
            </properties>
        </profile>

        <profile>
            <!--
            use this to package with streams-storm and set the mainclass to storm.deploy
            -->
            <id>storm</id>

            <dependencies>
                <dependency>
                    <groupId>de.sfb876</groupId>
                    <artifactId>streams-storm</artifactId>
                    <version>[0.9.20,)</version>
                    <exclusions>
                        <exclusion>
                            <groupId>*</groupId>
                            <artifactId>*</artifactId>
                        </exclusion>

                    </exclusions>
                </dependency>
                <dependency>
                    <groupId>org.apache.storm</groupId>
                    <artifactId>storm-core</artifactId>
                    <version>1.0.2</version>
                    <exclusions>
                    <exclusion>
                        <groupId>org.slf4j</groupId>
                        <artifactId>slf4j-log4j12</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>log4j</groupId>
                        <artifactId>log4j</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.slf4j</groupId>
                        <artifactId>log4j-over-slf4j</artifactId>
                    </exclusion>
                    </exclusions>
                </dependency>
            </dependencies>
            <properties>
                <mainclass>deploy</mainclass>
                <platform>storm</platform>
            </properties>
        </profile>

        <profile>
            <!--
            use this to package with streams-storm and set the mainclass to storm.deploy
            -->
            <id>storm-run</id>

            <properties>
                <mainclass>run</mainclass>
            </properties>
        </profile>

        <profile>
            <!--
            use this to package with streams-storm and set the mainclass to storm.deploy
            -->
            <id>storm-deploy</id>

            <properties>
                <mainclass>deploy</mainclass>
            </properties>
        </profile>

        <profile>
            <!--
            use this to add the performance package and measure performance of the processes
            -->
            <id>performance</id>

            <dependencies>
                <dependency>
                    <groupId>de.sfb876</groupId>
                    <artifactId>streams-performance</artifactId>
                    <version>${streams.cta.version}</version>
                </dependency>
            </dependencies>

        </profile>

        <profile>
            <!--
            add support for streams-hdfs
            -->
            <id>hdfs</id>

            <dependencies>
                <dependency>
                    <groupId>de.sfb876</groupId>
                    <artifactId>streams-hdfs</artifactId>
                    <version>0.0.4-SNAPSHOT</version>
                </dependency>
            </dependencies>

        </profile>
    </profiles>

